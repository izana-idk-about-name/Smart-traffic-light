# =============================================================================
# Smart Traffic Light System - Configuration Template
# =============================================================================
# Copy this file to .env and customize values for your environment
# All settings have sensible defaults optimized for both Raspberry Pi and Desktop

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================
# System operating mode
# Options: development, production, test
# - development: Enables debug logging, visualization windows, test images
# - production: Optimized for deployment, minimal logging
# - test: Used for automated testing
MODE=production
# Legacy support: MODO is also supported (MODE takes precedence)
# MODO=production

# Platform override (auto-detected if not set)
# Options: raspberry_pi, desktop
# Leave empty for auto-detection
# PLATFORM=

# Enable debug mode (overrides MODE setting)
# Options: true, false
DEBUG=false

# =============================================================================
# CAMERA SETTINGS
# =============================================================================
# Camera device indices (for real cameras)
CAMERA_A_INDEX=0
CAMERA_B_INDEX=1

# Camera resolution (optimized defaults: 320x240@10fps for RPi, 640x480@15fps for desktop)
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Camera buffer size (lower is better for real-time, higher for stability)
# Range: 1-10
CAMERA_BUFFER_SIZE=1

# Test image mode (for development without cameras)
USE_TEST_IMAGES=false
TEST_IMAGE_PATH_A=src/Data/test_frame_a.jpg
TEST_IMAGE_PATH_B=src/Data/test_frame_b.jpg

# =============================================================================
# DETECTION & ML MODEL SETTINGS
# =============================================================================
# Enable TensorFlow Lite models
USE_TFLITE=true

# Enable ML model detection (falls back to CV if model not available)
USE_ML_MODEL=true

# Use custom trained model
USE_CUSTOM_MODEL=true

# Minimum confidence threshold for detections
# Range: 0.0-1.0 (lower = more detections but more false positives)
MIN_CONFIDENCE=0.5

# Reset tracking interval (seconds)
# How often to reset object tracking to prevent drift
RESET_INTERVAL_SECONDS=30

# Enable object tracking across frames
ENABLE_TRACKING=true

# Model file paths
MODEL_PATH=src/models/efficientdet_lite2.tflite
LABELS_PATH=src/models/coco_labels.txt

# Maximum detection results per frame
# Range: 1-100
MAX_RESULTS=10

# =============================================================================
# COMPUTER VISION FALLBACK SETTINGS
# =============================================================================
# Enable CV-based detection as fallback when ML model unavailable
USE_FALLBACK_CV=true

# Background subtraction history (frames)
# Higher = more stable background model, but slower adaptation
BACKGROUND_HISTORY=50

# Variance threshold for background subtraction
# Higher = less sensitive to small changes
VAR_THRESHOLD=30

# Minimum area (pixels) for car detection
# Smaller = detect smaller/distant cars, but more false positives
MIN_CAR_AREA=200

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Maximum time allowed for processing one frame (seconds)
MAX_PROCESSING_TIME=1.0

# Enable real-time visualization windows (development mode only)
VISUALIZATION_ENABLED=true

# Save annotated frames to disk
SAVE_FRAMES=false

# Frame save interval (save every N frames)
FRAME_SAVE_INTERVAL=100

# Decision cycle interval (seconds between traffic light decisions)
DECISION_INTERVAL=3.0

# Number of processing threads
# Leave empty for auto-detection (uses CPU count)
# THREAD_COUNT=

# Memory limit for processing (MB)
MEMORY_LIMIT_MB=512

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
# Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Directory for log files
LOG_DIR=logs

# Enable performance metrics logging
ENABLE_PERFORMANCE_LOGGING=true

# Log output destinations
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# Maximum log file size (MB) before rotation
MAX_LOG_FILE_SIZE_MB=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# TRAFFIC CONTROL SETTINGS
# =============================================================================
# Minimum green light time (seconds)
# Range: 5-300
MIN_GREEN_TIME=10

# Maximum green light time (seconds)
# Range: 10-600
MAX_GREEN_TIME=60

# Yellow light duration (seconds)
# Range: 1-10
YELLOW_TIME=3

# All-red phase duration (seconds)
# Range: 1-10
RED_TIME=2

# =============================================================================
# NETWORK & COMMUNICATION SETTINGS
# =============================================================================
# Orchestrator server connection
ORCHESTRATOR_HOST=localhost
ORCHESTRATOR_PORT=9000

# Use WebSocket for communication (recommended for Raspberry Pi)
# Options: true, false
USE_WEBSOCKET=true

# Network timeout (seconds)
NETWORK_TIMEOUT=5

# Number of retry attempts for failed connections
NETWORK_RETRY_COUNT=3

# Network buffer size (bytes)
NETWORK_BUFFER_SIZE=1024

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Additional settings for development mode

# Enable verbose output for debugging
# VERBOSE=true

# Specify custom data directory
# DATA_DIR=src/Data

# Enable frame-by-frame stepping in visualization
# STEP_MODE=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Boolean values: true/false, yes/no, on/off, 1/0 (case insensitive)
# 2. Empty values use system defaults
# 3. Invalid values will raise errors with helpful messages
# 4. Platform-specific optimizations apply automatically
# 5. Changes require application restart to take effect
# 6. See src/settings/settings.py for validation rules and defaults